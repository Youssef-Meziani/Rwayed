{% block javascripts %}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			// Set the selected price range
			const selectedPriceRange = '{{ selectedPriceRange }}';
			if (selectedPriceRange) {
				const [from, to] = selectedPriceRange.split('..').map(Number);
				const slider = document.querySelector('.filter-price__slider').noUiSlider;
				slider.set([from, to]);
			}

			// Set the selected season
			const selectedSeason = '{{ selectedSeason }}';
			if (selectedSeason) {
				document.querySelector(`.season-filter[data-season="${selectedSeason}"]`).checked = true;
			}

			// Set the selected rating
			const selectedRating = '{{ selectedRating }}';
			if (selectedRating) {
				document.querySelector(`.rating-filter[data-rating="${selectedRating}"]`).checked = true;
			}
		});
	</script>
{% endblock %}
