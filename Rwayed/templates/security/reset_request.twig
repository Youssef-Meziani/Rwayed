{% extends 'base.twig' %}

{% block title %} - Reset Password{% endblock %}

{% block body %}
    <div class="block-space block-space--layout--after-header"></div>
    <div class="block">
        <div class="container container--max--lg">
            <div class="row justify-content-center">
                <div class="col-md-6 d-flex">
                    <div class="card flex-grow-1 mb-md-0 mr-0 mr-lg-3 ml-0 ml-lg-4">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Reset your password</h3>
                            {{ form_start(requestForm) }}

                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">{{ message }}</div>
                            {% endfor %}

                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">{{ message }}</div>
                            {% endfor %}

                            <div class="form-group">
                                {{ form_label(requestForm.email, 'Email address', {'label_attr': {'for': 'reset-email'}}) }}
                                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email', 'required': 'required', 'autofocus': 'autofocus', 'placeholder': 'Enter your email'}}) }}
                            </div>


                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-primary mt-3">Send password reset email</button>
                            </div>
                            {{ form_end(requestForm) }}
                        </div>
                        <div class="card-body card-body--padding--2 pt-0">
                            Remember It ?  <a href="{{ path('app_login') }}"> Log In </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="block-space block-space--layout--before-footer"></div>
{% endblock %}
