{% extends 'base.twig' %}

{% block title %}Change Your Password{% endblock %}

{% block body %}
    <div class="block-space block-space--layout--after-header"></div>
    <div class="block">
        <div class="container container--max--lg">
            <div class="row justify-content-center">
                <div class="col-md-6 d-flex">
                    <div class="card flex-grow-1 mb-md-0 mr-0 mr-lg-3 ml-0 ml-lg-4">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Change Your Password</h3>
                            {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}

                            {% for flash_error in app.flashes('change_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            <div class="form-group">
                                {{ form_label(resetForm.plainPassword.first, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'New Password'}}) }}
                                {% if resetForm.plainPassword.first.vars.errors|length > 0 %}
                                    <span class="text-danger">
                                        {% for error in resetForm.plainPassword.first.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </span>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(resetForm.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'}}) }}
                                {{ form_errors(resetForm.plainPassword.second) }}
                            </div>

                            {{ form_rest(resetForm) }}

                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-primary mt-3">Change Password</button>
                            </div>

                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="block-space block-space--layout--before-footer"></div>
{% endblock %}
