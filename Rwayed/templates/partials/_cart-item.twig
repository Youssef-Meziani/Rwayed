	<td class="cart-table__column cart-table__column--quantity" data-title="Quantity">
		<div class="cart-table__quantity input-number">
			<input class="form-control input-number__input" type="number" min="1" value="{{ quantity }}">
		</div>
		<button type="button" class="m-2 btn btn-primary btn-sm ms-2 update-quantity" data-id="{{ id }}" data-id-pneu="{{ idPneu }}"  data-repair="{{ isWithRepair ? 'true' : 'false' }}">
			<i class="fa fa-save"></i>
		</button>
	</td>
	<td class="cart-table__column cart-table__column--total" data-title="Total">{{ (price * quantity)|number_format(2, '.', ',') }} DH</td>
	<td class="cart-table__column cart-table__column--remove">
		<button type="button" class="cart-table__remove btn btn-sm btn-icon btn-muted" data-id="{{ tire.id }}" data-repair="{{ tire.isWithRepair ? 'true' : 'false' }}">
