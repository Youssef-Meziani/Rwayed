<tr class="cart-table__row" id="cart-item-{{ id }}">
	<td class="cart-table__column cart-table__column--image">
		<div class="image image--type--product">
			<a href="{{ path('product', {'slug': tire.slug}) }}" class="image__body">
				<img class="image__tag" src="{{ minio_url(tire.image) }}" alt="">
			</a>
		</div>
	</td>
	<td class="cart-table__column cart-table__column--product">
		<a href="{{ path('product', {'slug': tire.slug}) }}" class="cart-table__product-name">{{ marque }}</a>
		<ul class="cart-table__options">
			{% if isWithRepair %}
				<li>Repaired</li>
			{% else %}
				<li>No Repair</li>
			{% endif %}
		</ul>
	</td>
	<td class="cart-table__column cart-table__column--price" data-title="Price">{{ price }} DH</td>
