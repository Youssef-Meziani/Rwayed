{% extends 'base.twig' %}

{% block title %} - Register{% endblock %}

{% block body %}
    <div class="block-space block-space--layout--after-header"></div>
    <div class="block">
        <div class="container container--max--lg">
            <div class="row justify-content-center">
                <div class="col-md-8 d-flex mt-4 mt-md-0"> <!-- Ajustez la largeur au besoin -->
                    <div class="card flex-grow-1 mb-0">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Register</h3>
                            {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(registrationForm.prenom) }}
                                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
                                        {% if registrationForm.prenom.vars.errors %}
                                            {% for error in registrationForm.prenom.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(registrationForm.nom) }}
                                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
                                        {% if registrationForm.nom.vars.errors %}
                                            {% for error in registrationForm.nom.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(registrationForm.tele) }}
                                        {{ form_widget(registrationForm.tele, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
                                        {% if registrationForm.tele.vars.errors %}
                                            {% for error in registrationForm.tele.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(registrationForm.date_naissance) }}
                                        {{ form_widget(registrationForm.date_naissance, {'attr': {'class': 'form-control', 'placeholder': 'Date of Birth'}, 'widget': 'single_text'}) }}
                                        {% if registrationForm.date_naissance.vars.errors %}
                                            {% for error in registrationForm.date_naissance.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.email) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'customer@example.com'}}) }}
                                {% if registrationForm.email.vars.errors %}
                                    {% for error in registrationForm.email.vars.errors %}
                                        <span class="text-danger">{{ error.message }}</span>
                                    {% endfor %}
                                {% endif %}

                            </div>

                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword.first) }}
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                                {% if registrationForm.plainPassword.first.vars.errors|length > 0 %}
                                    <span class="text-danger">
                                        {% for error in registrationForm.plainPassword.first.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </span>
                                {% endif %}


                            </div>

                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword.second) }}
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'}}) }}
                                {% if registrationForm.plainPassword.first.vars.errors|length > 0 %}
                                    <span class="text-danger">
                                        {% for error in registrationForm.plainPassword.first.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </span>
                                {% endif %}
                            </div>
                            <div class="form-check">
                            <span class="input-check form-check-input">
                                <span class="input-check__body">
                                    {{ form_widget(registrationForm.agreeTerms, {'id': 'signup-agree', 'attr': {'class': 'input-check__input'}}) }}
                                    <span class="input-check__box"></span>
                                    <span class="input-check__icon">
                                        <svg width="9px" height="7px">
                                            <path d="M9,1.395L3.46,7L0,3.5L1.383,2.095L3.46,4.2L7.617,0L9,1.395Z"></path>
                                        </svg>
                                    </span>
                                </span>
                            </span>
                                <label class="form-check-label" for="signup-agree">I agree to <a href="{{ path('terms') }}">the terms and conditions.</a></label>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-primary mt-3">Register</button>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                        <div class="card-body card-body--padding--2 pt-0">
                            Already have an account? <a href="{{ path('app_login') }}">Log In</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="block-space block-space--layout--before-footer"></div>
{% endblock %}
