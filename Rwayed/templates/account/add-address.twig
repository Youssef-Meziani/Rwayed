{% extends 'base.twig' %}

{% block title %} - Add Address{% endblock %}

{% block body %}
    <div class="block-space block-space--layout--after-header"></div>
    <div class="block">
        <div class="container container--max--xl">
            <div class="row">
                {{ include('partials/_account-nav.twig', { activeNavItem: 'addresses' }) }}
                <div class="col-12 col-lg-9 mt-4 mt-lg-0">
                    <div class="card">
                        <div class="card-header">
                            <h5>Add New Address</h5>
                        </div>
                        <div class="card-divider"></div>
                        <div class="card-body card-body--padding--2">
                            <div class="row no-gutters">
                                <div class="col-12 col-lg-10 col-xl-8">
                                    {{ form_start(form) }}
                                        <div class="form-group">
                                            {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.street, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.postcode, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="form-group mt-3">
                                            <div class="form-check">
                                                    <span class="input-check form-check-input">
                                                        <span class="input-check__body">
                                                            {{ form_widget(form.setasmydefaultaddress, {'attr': {'class': 'input-check__input'}}) }}
                                                            <span class="input-check__box"></span>
                                                            <span class="input-check__icon"><svg width="9px" height="7px">
                                                                    <path d="M9,1.395L3.46,7L0,3.5L1.383,2.095L3.46,4.2L7.617,0L9,1.395Z"></path>
                                                                </svg>
                                                            </span>
                                                        </span>
                                                    </span>
                                                <label class="form-check-label" for="default-address">Set as my default address</label>
                                            </div>
                                        </div>
                                        <div class="form-group mb-0 pt-3 mt-3">
                                            <button type="submit" class="btn btn-primary">Add Address</button>
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="block-space block-space--layout--before-footer"></div>
{% endblock %}
