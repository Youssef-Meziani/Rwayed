{% extends 'base-sidebar.twig' %}

{% block title %} - Tire Edit{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .image-container {
            position: relative;
            display: inline-block;
            margin-right: 10px;
        }

        .delete-button {
            position: absolute;
            top: 5px;
            right: 5px;
            z-index: 1;
            background-color: rgba(255, 255, 255, 0.5);
            color: red;
            border: none;
            padding: 0;
            width: 24px;
            height: 24px;
            font-size: 16px;
            line-height: 1;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="page-content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Modifier un pneu</h4>
                        </div>
                        <div class="card-body">

                            {{ form_start(form) }}


                                <div class="mb-3 row">
                                    <label for="{{ form.marque.vars.id }}" class="col-md-2 col-form-label">Marque</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.marque, { 'attr': {'class': 'form-control'} }) }}
                                        {% if form.marque.vars.errors %}
                                            {% for error in form.marque.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label for="{{ form.typeVehicule.vars.id }}" class="col-md-2 col-form-label">Type de véhicule</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.typeVehicule, { 'attr': {'class': 'form-control'} }) }}
                                        {% if form.typeVehicule.vars.errors %}
                                            {% for error in form.typeVehicule.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label for="{{ form.saison.vars.id }}" class="col-md-2 col-form-label">Saison</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.saison, { 'attr': {'class': 'form-control'} }) }}
                                        {% if form.saison.vars.errors %}
                                            {% for error in form.saison.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label for="{{ form.prixUnitaire.vars.id }}" class="col-md-2 col-form-label">Prix unitaire</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.prixUnitaire, { 'attr': {'class': 'form-control'} }) }}
                                        {% if form.prixUnitaire.vars.errors %}
                                            {% for error in form.prixUnitaire.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label for="{{ form.quantiteStock.vars.id }}" class="col-md-2 col-form-label">Quantité en stock</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.quantiteStock, { 'attr': {'class': 'form-control'} }) }}
                                        {% if form.quantiteStock.vars.errors %}
                                            {% for error in form.quantiteStock.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label for="{{ form.description.vars.id }}" class="col-md-2 col-form-label">Description</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                                        {% if form.description.vars.errors %}
                                            {% for error in form.description.vars.errors %}
                                                <span class="text-danger">{{ error.message }}</span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
