                            </div>

                            <div class="mb-3 row">
                                <div class="col-md-2"></div>
                                    <div class="col-md-10 text-md-end">
                                        <a href="{{ path('pneu_index') }}" type="submit" class="btn btn-primary waves-effect waves-light">Go back</a>
                                        <button id="edit-button" type="submit" class="btn btn-success waves-effect waves-light">Edit</button>
                                    </div>
                                </div>
                                {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

