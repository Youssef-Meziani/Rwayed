{% extends 'base.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="authentication-bg min-vh-100">
        <div class="bg-overlay bg-light"></div>
        <div class="container">
            <div class="d-flex flex-column min-vh-100 px-3 pt-4">
                <div class="row justify-content-center my-auto">
                    <div class="col-md-8 col-lg-6 col-xl-5">

                        <div class="mb-4 pb-2">
                            <a class="d-block auth-logo">
                                <img src="{{ asset('images/logo.svg') }}" alt="" height="50" class="auth-logo-dark me-start">
                                <img src="{{ asset('images/logo light.svg') }}" alt="" height="50" class="auth-logo-light me-start">
                            </a>
                        </div>

                        <div class="card">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5>Reset Password</h5>
                                    <p class="text-muted">Reset Password to continue to RWAYED.</p>
                                </div>
                                <div class="p-2 mt-4">

                                    {% for flash_error in app.flashes('reset_password_error') %}
                                        <div class="alert alert-danger text-center small mb-4" role="alert">{{ flash_error }}</div>
                                    {% endfor %}

                                    {{ form_start(requestForm, {'attr': {'class': 'form-horizontal'}}) }}

                                    <div class="mb-3">
                                        {{ form_label(requestForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="position-relative input-custom-icon">
                                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter email'}}) }}
                                            <span class="bx bx-mail-send"></span>
                                        </div>
                                        {{ form_errors(requestForm.email) }}
                                    </div>
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary w-100 waves-effect waves-light">Send password reset email</button>
                                    </div>

                                    {{ form_end(requestForm) }}

                                    <div class="mt-4 text-center">
                                        <p class="mb-0">Remember It ? <a href="{{ path('app_login') }}" class="fw-medium text-primary"> Log In </a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div>
        </div><!-- end container -->
    </div>
    <!-- end authentication section -->
    {% block javascripts %}
    {% endblock %}
{% endblock %}
