{% extends 'base.twig' %}

{% block title %} - Server Error{% endblock %}

{% block body %}
    <!-- <body data-layout="horizontal"> -->
    <div class="min-vh-100" style="background: url({{ asset('images/bg-2.png') }}) top;">
        <div class="bg-overlay bg-light"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center py-5 mt-5">
                       <div class="position-relative">
                          <h1 class="error-title error-text mb-0">500</h1>
                          <h4 class="error-subtitle text-uppercase mb-0">Internal Server Error</h4>
                          <p class="font-size-16 mx-auto text-muted w-50 mt-4">We're sorry, but something went wrong on our end. Our team has been notified and is working to fix the issue. In the meantime, you can try again later or return to the Dashboard.</p>
                       </div>
                        <div class="mt-4 text-center">
                            <a class="btn btn-primary" href="{{ path('home') }}">Back to Dashboard</a>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end authentication section -->
{% endblock %}